<div class="row">
    <div class="col-md-3 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <label> Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">

                    </div>
                    <div class="form-group">
                      <label for="">Email</label>
                      <input type="email" class="form-control" name="email"  aria-describedby="emailHelpId" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                      <label for="">Password</label>
                      <input type="password" name="password" class="form-control" placeholder="password" value="{{password}}" >
                      
                    </div>
                    <div class="form-group">
                      <label for="">Confirm-password</label>
                      <input type="password" class="form-control" name="confirm_password" placeholder="Confirm-Password" value="{{confirm_password}}">
                    </div>

                    <div class="form-group">
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary " type="submit">SignUp</button>
                        </div>
                    </div>
                    


                </form>

            </div>
        </div>
    </div>

</div>