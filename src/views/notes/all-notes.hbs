<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title d-flex justify-content-between align-items-center">  
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                        
                    <p>
                    {{description}}
                    </p>

                   <div class="d-grid gap-2">

                        <button class="btn btn-outline-danger" type="button">Delete</button>
                        
                    </div>

                </div>
            </div>
        </div>
    {{else}}
            <div class="row  col-auto mx-5">

                <div class="card">
                    <div class="card-body  ">
                        <div class="d-grid gap-2">

                            <p class="lead">Ther are not notes yet</p>
                            <a href="/notes/add" class="btn btn-success ">Create One!</a>

                        </div>
                    </div>
                </div>

            </div>
        </div>



        
    {{/each}}
</div>