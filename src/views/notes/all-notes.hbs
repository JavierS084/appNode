<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">

                    

                    <h4 class="card-title d-flex justify-content-between align-items-center">  
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                        
                    <p>
                        {{description}}
                    </p>

                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-danger" type="submit">Delete</button>
                        </div>
                    </form>
                   
                </div>
            </div>
        </div>
    {{else}}
            <div class="row  col-auto mx-5">

                <div class="card">
                    <div class="card-body  ">
                        <div class="d-grid gap-2">
                            <h3> Hello {{ user.name }}</h3>
                            <p class="lead">Ther are not notes yet</p>
                            <a href="/notes/add" class="btn btn-success ">Create One!</a>

                        </div>
                    </div>
                </div>

            </div> 
    {{/each}}
    <div class="plus-circle">
       <a href="/notes/add"> <i class="fa fa-plus-circle fa-3x" aria-hidden="true"></i></a>
    </div>
     
</div>